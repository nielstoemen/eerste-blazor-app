@page "/todo"
@rendermode InteractiveServer

<h3>ToDo</h3>


@code {
    //call op todo item
    private List<TodoItem> todos = new();


    string newTodo = "";

    //add fucntie om dingen toe te voegen aan todo list
    void AddTodo()
    {
        if (!string.IsNullOrWhiteSpace(newTodo))
        {
            todos.Add(new TodoItem { Title = newTodo });
            newTodo = string.Empty;
        }
    }
}

@*for each loop die door de todo list heen gaat en uitprint*@
<ul>
    @foreach (var todo in todos)
    {
        <li>@todo.Title</li>
    }
</ul>

@*input om dingen aan todo toe te voegen*@
<input />
<button>Add todo</button>

